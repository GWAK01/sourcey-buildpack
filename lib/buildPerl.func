# build a copy of perl

function buildPerl () {
   PERL_VER=$1
   wget http://www.cpan.org/src/5.0/perl-${PERL_VER}.tar.gz  -O - | tar --gzip -xf -
   pushd "`ls -1frt| grep /| tail -1`"
   ./Configure \
     -Ui_db \
     -Dprefix=$PREFIX \
     -Dprivlib=.../../lib/perl \
     -Dsitelib=.../../lib/perl5 \
     -Duserelocatableinc \
     -Dusethreads -des
   make
   make install DESTDIR=$DESTDIR
}
